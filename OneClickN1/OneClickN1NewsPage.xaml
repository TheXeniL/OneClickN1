<?xml version="1.0" encoding="UTF-8"?>
<ContentPage x:Name="newsPage" IsBusy="{Binding Source={x:Reference newsPage}, Path=IsBusy}"  xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="OneClickN1.OneClickN1NewsPage">
	<ContentPage.Content>
        
        <AbsoluteLayout HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand">
<Image x:Name="background" Source="Background.jpg" Aspect="AspectFill" AbsoluteLayout.LayoutBounds="0.0, 0.0, 1.0, 1.0"
               AbsoluteLayout.LayoutFlags="All" />

           
           
        <StackLayout
            AbsoluteLayout.LayoutBounds="0.0, 0.0, 1.0, 1.0"
            AbsoluteLayout.LayoutFlags="All">


                <Grid BackgroundColor="Transparent" >
            <Grid.RowDefinitions>
                <RowDefinition Height="65" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>


                    <!-- Searh bar -->
                     <Grid Grid.Row="0" Padding="0,20,0,1" BackgroundColor="Transparent" >
                <Grid BackgroundColor="Transparent" >
                            <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="50" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="0" />
                    </Grid.ColumnDefinitions>
                            <Image Source="LogoN1" HorizontalOptions="Center" VerticalOptions="Center" WidthRequest="70" HeightRequest="65"  />
                            <Entry x:Name="newTagsToSeach" WidthRequest="350" HeightRequest="36" Completed="SearchAnotherTags" HorizontalTextAlignment="Center" FontFamily="Ubuntu" FontSize="16" Keyboard="Text" PlaceholderColor="#9d9d9f" Placeholder="Искать другие новости" HorizontalOptions="Center" VerticalOptions="Center"  Grid.Column="1"/>
                </Grid>
            </Grid>


                    <!-- The List view -->
            <ListView x:Name="newsList" Grid.Row="1" BackgroundColor="Transparent" SeparatorVisibility="None" HasUnevenRows="true" Refreshing="RefreshNews" ItemAppearing="LoadMoreNews" ItemTapped="ShowDetails" >
        
                        <ListView.ItemTemplate>
                        <DataTemplate>
                        <ViewCell>
                                     <Grid Padding="8,0,8,10" RowSpacing="0" >
                                    
                                <Grid Padding="1" BackgroundColor="#e1e1e3" RowSpacing="0" >
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="192" />
                                        <RowDefinition Height="64" />
                                    </Grid.RowDefinitions>
                                            <Grid Grid.Row="0" Padding="0" BackgroundColor="#184A65" >
                                        <Image Source="{Binding imageURL}" Aspect="AspectFill" />
                                    </Grid>
                                    <Grid Grid.Row="1" BackgroundColor="#ffffff" RowSpacing="0">
                                        <Grid Padding="10" RowSpacing="0">
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="20" />
                                                <RowDefinition Height="4" />
                                                <RowDefinition Height="20" />
                                            </Grid.RowDefinitions>
                                                    <StackLayout Grid.Row="0" >
                                                        <Label FormattedText="{Binding caption}" HorizontalOptions="Start" VerticalOptions="Start" FontFamily="Ubuntu-Medium" FontAttributes="Bold" FontSize="15" TextColor="#3c3947" />
                                                    </StackLayout>
                                        </Grid>
                                    </Grid>
                                </Grid>
                            </Grid>
                                </ViewCell>
                            </DataTemplate>
                        </ListView.ItemTemplate>
            </ListView>
                    </Grid> 
        </StackLayout>
            <StackLayout Padding="12" AbsoluteLayout.LayoutFlags="PositionProportional" AbsoluteLayout.LayoutBounds="0.5,0.5,-1,-1">
                <ActivityIndicator IsRunning="{Binding Source={x:Reference newsPage}, Path=IsBusy}" VerticalOptions="Center"  Color="White" HorizontalOptions="Center"  AbsoluteLayout.LayoutFlags="All" AbsoluteLayout.LayoutBounds="0.0, 0.0, 1.0, 1.0" />
            </StackLayout>
                </AbsoluteLayout>
	</ContentPage.Content>
</ContentPage>
