<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:i18n="clr-namespace:OneClickN1;assembly=OneClickN1" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="OneClickN1.OneClickN1WebView">
	<ContentPage.Content>
        <AbsoluteLayout>
<Image x:Name="background" Source="Background.jpg" Aspect="AspectFill" AbsoluteLayout.LayoutBounds="0.0, 0.0, 1.0, 1.0"
               AbsoluteLayout.LayoutFlags="All" />
        
        <StackLayout
            AbsoluteLayout.LayoutBounds="0.0, 0.0, 1.0, 1.0"
            AbsoluteLayout.LayoutFlags="All">
        <StackLayout>
            <StackLayout Orientation="Horizontal" Padding="10,10,0,0" >
                <Button Text="{i18n:Translate backButton}" FontSize="18" TextColor="White" HorizontalOptions="Start" Clicked="backButtonClicked" />
            </StackLayout>
                <WebView x:Name="webView" HeightRequest="1000" WidthRequest="1000" />
            </StackLayout>
                </StackLayout>
            </AbsoluteLayout>
	</ContentPage.Content>
</ContentPage>
